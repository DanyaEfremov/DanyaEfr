#include <iostream>

#include <cmath>

using namespace std;

int main()

{

   int a, b, c, P;

   cout << "katet a: ";

   cin >> a;

   cout << "katet b: ";

   cin >> b;

   c = a * a + b * b;

   c = sqrt(c);

   cout << "hypotenuse = " << c << endl;

   P = a + b + c;

   cout << "perimetr = " << P;

   return 0;

}
